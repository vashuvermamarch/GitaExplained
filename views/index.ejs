                        <div class="chapter-no">
                            Chapter-number : <%= chapter.chapter_number %>
                        </div>
                        <div class="chapter-name">
                            <%= chapter.name %>
                        </div>
                        <div class="chapter-english">
                            <%= chapter.name_translated %>
                        </div>
                    </button>
                </form>
                <% }); %>
        </div>
    </div>
